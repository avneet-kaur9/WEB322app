<div class="row">
  <div class="col-md-12">
    <h2>Categories
      <a href="/categories/add" class="btn btn-success float-end">Add
        Category</a>
    </h2>
    <hr />

    <div class="divider-column">
  <div class="ui vertical divider">
    <i class="ui icon right arrow"></i>
  </div>
</div>
<div class="eight wide column">
  <div class="ui basic segment scrollable-menus">
    {{menus-component
      model=model
      subRoute='categories.sub-categories.tertiary-categories'
      groupColumn='menu2'}}
  </div>
</div>
{{outlet}}

    
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each categories}}
            <tr>
              <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
              <td><a
                  href="/items?category={{this.id}}"
                >{{this.category}}</a></td>
              <td><a
                  href="/categories/delete/{{this.id}}"
                  class="btn btn-danger"
                >Remove</a></td>
            </tr>
          {{/each}}
        </tbody>

      </table>
    </div>

  </div>
  {{#unless categories}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>
