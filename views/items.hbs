<div class="row">
  <div class="col-md-12">
    <h2>Items
      <a href="/items/add" class="btn btn-success float-end">Add Item</a>
    </h2>
    <hr />

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Price</th>
            <th>Category</th>
            <th>Published</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each items}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.title}}</td>
              <td>{{#formatDate this.postDate}}{{/formatDate}}</td>
              <td>{{this.price}}</td>
              <td><a
                  href="/items?category={{this.category}}"
                >{{this.category}}</a></td>
              <td>{{#if this.published}}True{{else}}False{{/if}}</td>
              <td>
                <a
                  href="/items/delete/{{this.id}}"
                  class="btn btn-danger"
                >Remove</a>
              </td>
            </tr>
          {{/each}}
        </tbody>

      </table>
    </div>

  </div>
  {{#unless items}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>